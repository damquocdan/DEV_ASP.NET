@model DevXuongMoc.Models.ProductImage

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

<h3>Bạn có muốn xoá hình ảnh sản phẩm này</h3>
<div>
    <h4>Hình ảnh sản phẩm</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Mã
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pid)
        </dd>
        <dt class = "col-sm-2">
            Hình ảnh sản phẩm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xoá" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại danh sách</a>
    </form>
</div>
</body>
</html>
