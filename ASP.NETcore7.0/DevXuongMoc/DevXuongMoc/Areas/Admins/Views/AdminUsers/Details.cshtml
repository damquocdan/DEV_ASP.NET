@model DevXuongMoc.Models.AdminUser

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admins/Views/Shared/Admin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Chi tiết</title>
</head>
<body>

<div>
    <h4>Tài khoản Admin</h4>
    <hr />
    <div class="table">
    <dl class="row">
        <dt class = "col-sm-2">
            Tài khoản
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Account)
        </dd>
        <dt class = "col-sm-2">
            Mật khẩu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class = "col-sm-2">
            Mã nhân sự
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaNhanSu)
        </dd>
        <dt class = "col-sm-2">
            Tên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
           Số điện thoại
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Ảnh đại diện
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Avatar" alt="@Model.Name" style="width:350px;height:350px" />
        </dd>
        <dt class = "col-sm-2">
            Mã phòng ban
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPhongBan)
        </dd>
        <dt class = "col-sm-2">
            Ngày tạo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayTao)
        </dd>
        <dt class = "col-sm-2">
            Người tạo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NguoiTao)
        </dd>
        <dt class = "col-sm-2">
            Ngày cập nhật
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayCapNhat)
        </dd>
        <dt class = "col-sm-2">
            Người cập nhật
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NguoiCapNhat)
        </dd>
        <dt class = "col-sm-2">
            Mã thông báo phiên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SessionToken)
        </dd>
        <dt class = "col-sm-2">
            SALT
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salt)
        </dd>
        <dt class = "col-sm-2">
            ISADMIN
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsAdmin)
        </dd>
        <dt class = "col-sm-2">
            Trạng thái
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrangThai)
        </dd>
        <dt class = "col-sm-2">
            ISDELETE
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsDelete)
        </dd>
            </dl>
        </div>
</div>
<div>
    <a class="btn btn-danger" asp-action="Edit" asp-route-id="@Model?.Id">Sửa</a> 
    <a class="btn btn-info" asp-action="Index">Quay lại danh sách</a>
</div>
</body>
</html>
