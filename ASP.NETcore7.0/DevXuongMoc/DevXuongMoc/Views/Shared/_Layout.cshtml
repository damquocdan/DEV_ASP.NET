<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DevXuongMoc</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DevXuongMoc.styles.css" asp-append-version="true" />
</head>
<body>
    <header style="display:flex; padding:1rem 10%; align-items:center;justify-content:space-around;" class="shadow">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <img class="logo" src="./images/anhcat/logo.jpg" alt="logo" />
        </a>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3">
            <div class="container-fluid">
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-around" style="width:900px;">
                    <ul class="navbar-nav flex-grow-3" style="font-size:18px;">
                        <li class="nav-item">
                            <a class="nav-link text-dark p-3" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark p-3" asp-area="" asp-controller="Home" asp-action="Privacy">Giới thiệu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark p-3" asp-area="" asp-controller="Product" asp-action="Index">Sản phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark p-3" asp-area="" asp-controller="Product" asp-action="Index">Tin tức</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark p-3" asp-area="" asp-controller="Product" asp-action="Index">Đối tác</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark p-3" asp-area="" asp-controller="Product" asp-action="Index">Liên hệ</a>
                        </li>
                    </ul>
                </div>
            </div>
           
        </nav>
        <div class="group-icon" style="display:flex; width:80px; justify-content:space-around">
            <div class="icon icon-cart">
                <a href="/gio-hang">
                    <i class="fa-solid fa-cart-shopping fa-lg" style="color: #000000;"></i>
                </a>
                
            </div>
            <div class="icon icon-wishlist">
                <a href="/danh-sach-yeu-thich">
                    <i class="fa-solid fa-heart fa-bounce fa-lg" style="color: #000000;"></i>
                </a>
                
            </div>
            <div class="icon">
                <i class="fa-solid fa-magnifying-glass fa-beat-fade fa-lg" style="color: #000000;"></i>
            </div>
            
        </div>
    </header>
    <div>
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - DevXuongMoc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
